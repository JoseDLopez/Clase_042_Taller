<h1>GUARDA LA INFO DE TU CARRO</h1>
<p>YO VOY POR POST</p>

<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
		<form method="get" action="<%= pages_guardar_auto_path %>">
		  <div class="form-group">
		    <label for="modelo">Introduzca su modelo</label>
		    <input type="text" class="form-control" name="modelo" id="modelo" placeholder="Modelo" >
		  </div>
		  <div class="form-group">
		    <label for="marca">Marca:</label>
		    <input type="text" class="form-control" name ="marca" id="marca" placeholder="example@correo.com">
		  </div>
		  <div class="form-group">
		    <label for="kilometros">Introduzca el kilometraje:</label>
		    <input type="number" value="0" name="kilometros" id="kilometros" min="0" max="700000" >
		  </div>
		  <button type="submit" class="btn btn-default">Submit</button>
		</form>
	</div>
</div>
<% @aut.each do |u| %>
	<p><%= u.id %> <%= u.modelo %> <%= u.marca %> <%= u.km %></p>
	<p>_______________________</p>
<% end -%>